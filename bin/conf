#! /usr/bin/env bash

function _git() {
    git --git-dir=$HOME/.git/ --work-tree=$HOME $@
}

function add() {
    _git add $@
}

function commit() {
    _git commit $@
}

function fetch() {
    _git fetch -f
}

function log() {
    _git log
}

function pull() {
    _git push $@
}

function push() {
    _git push $@
}

function status() {
    _git status
}


# Dispatch

cmd=1

case $1 in
g|git)
  cmd=_git
  ;;
add|commit|fetch|log|pull|push|status)
  cmd=$1
  ;;
*)
  echo "Unrecognized command: $1"
  exit 1
  ;;
esac

$cmd ${@:2}

