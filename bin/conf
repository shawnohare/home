#! /usr/bin/env bash

function _git() {
    git --git-dir=$HOME/.git/ --work-tree=$HOME "$@"
}

function sync() {
    # Pull changes into bare repo and checkout
    cd ~/home.git
    git add .
    git commit -m "Syncing"
    git push
    _git fetch
    _get checkout -f
}

case $1 in
g|git)
  _git "${@:2}"
  ;;
add|commit|log|pull|push|status)
  _git $1 "${@:2}"
  ;;
*)
  echo "Unrecognized command: $1"
  exit 1
  ;;
esac

